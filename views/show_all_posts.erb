<div class="container">

<h2>ALL TOPICS AND COMMENTS</h2>

  <% @posts.each do |display| %>

    <div class="posts">

      <div class="two columns"><h5>TITLE: </h5></div><div class="ten columns"><h5><%= "#{display['title']}" %></h5></div>

      <div><h5>Posted by: </h5></div><div><h5><%= "#{display['name']}" %></h5></div>
      <div><h5>POST: <%= "#{display['post']}" %></h5></div>
      <div><h5>REPLIES:</h5></div>
    
        <% if @added_comments %>
          <% @added_comments.each do |show| %>

          <% if show['post_id'].to_i == display['id'].to_i %>
        
            <div><%= "#{show['name']}" %> => </div><div><%= "#{show['comment']}" %></div>

          <% end %>     
      <% end %>
  <% end %>

<div>
    <div class="input-row">
      <form method="post" action="/show_all_posts/<%=display['id'] %>">
        <input type="hidden" name="_method" value="DELETE">
        <input type="submit" value="DELETE THIS POST">
      </form>
    </div>

    <div class="input-row">
      <form method="get" action="/topic_upvote/<%=display['id'] %>">
        <input type="submit" value="Upvote Topic">
      </form>
    </div>

    <div class="input-row">
      <form method="get" action="/show_all_posts/<%=display['id'] %>/add_comment/">
        <input type="submit" value="ADD NEW COMMENT">
      </form>
    </div>
  </div>
</div>
<% end %>
</div>