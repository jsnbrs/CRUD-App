<!-- Log in page -->
<div class="container sign">

  <h4>SIGN IN</h4>

    <%if @error_email%>
      <%= @error_email%>
    <%end%>

    <%if @error_password%>
      <%= @error_password%>
    <%end%>

  <form actions="/login" method="post">

    <div class="input-row">
        <label for="email">Email</label>
        <input type="email" name="email" />
    </div>

    <div class="input-row">
        <label for="password">Password</label>
        <input type="password" name="login_password" />
    </div>

    <div class="input-row">
        <input type="submit" value="Sign In!" />
    </div>

  </form>

    <h6>Don't have an account? <a href="/signup" class="signup">Sign up</a></h6>

</div>