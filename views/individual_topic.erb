<% @individual_post.each do |one| %>

      <div><h5>TITLE: </h5><%= "#{one['title']}" %></div>
      <h6>Posted by: </h6><%= "#{one['name']}" %>

      <h5>POST: </h5><%= "#{one['post']}" %>
  
      <p>Replies</p>
            
   <% if @added_comments %>
          <% @added_comments.each do |show| %>

            <% if show['post_id'].to_i == display['id'].to_i %>
        
              <div><%= "#{show['name']}" %> => <%= "#{show['comment']}" %></div><br>

            <% end %>
            
          <% end %>

        <% end %>


<% end %>